{
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test": "NODE_ENV=jest jest --config ./jest-e2e.json --no-cache --detectOpenHandles --forceExit --",
    "y-websocket": "HOST=0.0.0.0 PORT=${YJS_PORT} npx y-websocket",
    "prettier": "npx prettier --write .",
    "prettier:check": "npx prettier --check .",
    "ports": "netstat -tuln"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/websockets": "^11.1.0",
    "@y/websocket-server": "^0.1.1",
    "docx": "^9.4.1",
    "docxservice": "file:packages/docxservice",
    "module-alias": "^2.2.3",
    "node-polyglot": "^2.6.0",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.2",
    "y-webrtc": "^10.3.0",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.26"
  },
  "devDependencies": {
    "@nestjs/platform-socket.io": "^11.1.0",
    "@nestjs/testing": "^11.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.87",
    "@types/node-polyglot": "^2.5.0",
    "@types/socket.io": "^3.0.1",
    "@types/ws": "^8.18.1",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "socket.io-client": "^4.8.1",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "ws": "^8.18.2"
  }
